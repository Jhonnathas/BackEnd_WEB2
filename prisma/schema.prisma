generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Jogo{
  idJogo Int @id @default(autoincrement())
  nomeJogo String
  categoria String
  plataformas String
  descrição String
  media Float
  mediaJogabilidade Float
  mediaGraficos Float
  mediaHistoria Float
}

model Usuario{
  id String @id @default(uuid())
  nome String @unique
  carisma String
  email String @unique
  telefone String @unique
}